<p>
	<strong>Title:</strong>
	<%= @article.title %>
</p>
<p>
	<strong>Text:</strong>
	<%= @article.text %>
</p>
<h2>Comments</h2>
<% if @article.comments.any? %>
	<%= render @article.comments %>
<% else %>
<strong>No comments...</strong>
<% end %>
<h3>Add a comment</h3>
<%= render 'comments/form' %>

<%= link_to 'Back', articles_path %>
<%= link_to 'Edit', edit_article_path(@article) %>
